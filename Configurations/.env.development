NAMESPACE=insightops
ENVIRONMENT=Development
BUILD_CONTEXT=..
DOCKERFILE=Dockerfile

# Database
DB_USER=insightops_user
DB_PASSWORD=insightops_pwd
DB_NAME=insightops_db
DB_PORT=5433

# Service Ports
FRONTEND_PORT=5010
GATEWAY_PORT=5011
ORDER_PORT=5012
INVENTORY_PORT=5013
GRAFANA_PORT=3001
PROMETHEUS_PORT=9091
LOKI_PORT=3101
TEMPO_PORT=4319
TEMPO_PORT_HTTP=4320

# Monitoring
METRICS_RETENTION=7d
GRAFANA_USER=admin
GRAFANA_PASSWORD=InsightOps2024!

# Tracing
TEMPO_RETENTION=24h
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Resource Limits
PROMETHEUS_CPU_LIMIT=0.5
PROMETHEUS_MEM_LIMIT=512M
LOKI_CPU_LIMIT=0.5
LOKI_MEM_LIMIT=512M
TEMPO_CPU_LIMIT=0.5
TEMPO_MEM_LIMIT=512M

# Volume Paths
PROMETHEUS_DATA_DIR=/prometheus-data
LOKI_DATA_DIR=/loki-data
TEMPO_DATA_DIR=/tempo-data