@model HealthStatusViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>System Health Status - InsightOps</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .badge {
            padding: 0.5em 0.75em;
        }

        .modal-dialog {
            max-width: 800px;
        }

        pre {
            white-space: pre-wrap;
        }

        .card {
            margin-bottom: 1.5rem;
        }

        .table th {
            background-color: #f8f9fc;
        }

        .alert-heading .fas {
            margin-right: 0.5rem;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>
<body>
    <script>
        async function loadServiceDetails(serviceName) {
            try {
                const response = await fetch(`/system-health/details/${encodeURIComponent(serviceName)}`);
                const data = await response.json();
                const modalBody = document.querySelector(`#detailsModal${serviceName.replace(" ", "")} .modal-body pre`);
                modalBody.textContent = data.details;
            } catch (error) {
                console.error('Error loading service details:', error);
            }
        }

        async function loadServiceMetrics(serviceName) {
            try {
                const response = await fetch(`/system-health/metrics/${encodeURIComponent(serviceName)}`);
                const data = await response.json();
                const tbody = document.querySelector(`#metricsModal${serviceName.replace(" ", "")} tbody`);
                tbody.innerHTML = Object.entries(data)
                    .map(([key, value]) => `<tr><td>${key}</td><td>${value}</td></tr>`)
                    .join('');
            } catch (error) {
                console.error('Error loading service metrics:', error);
            }
        }
    </script>

    <div class="container-fluid p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0">System Health Status</h1>
                <p class="text-muted">Infrastructure and Application Services Health Monitoring</p>
            </div>
            <div>
                <a asp-action="Refresh" class="btn btn-primary">
                    <i class="fas fa-sync"></i> Refresh
                </a>
            </div>
        </div>

        <div class="alert @(Model.OverallHealthy ? "alert-success" : "alert-danger") mb-4">
            <h4 class="alert-heading">
                <i class="fas @(Model.OverallHealthy ? "fa-check-circle" : "fa-exclamation-circle")"></i>
                System Status: @(Model.OverallHealthy ? "Healthy" : "Issues Detected")
            </h4>
            <p class="mb-0">Last Updated: @Model.LastUpdated.ToString("g")</p>
        </div>

        @foreach (var group in Model.ServiceGroups)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas @(group.IsHealthy ? "fa-check text-success" : "fa-exclamation-triangle text-danger")"></i>
                        @group.Name
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Status</th>
                                    <th>Last Checked</th>
                                    <th>Details</th>
                                    <th>Metrics</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in group.Services)
                                {
                                    <tr>
                                        <td>@service.Name</td>
                                        <td>
                                            <span class="badge @(service.Status == "Healthy" ? "bg-success" : "bg-danger")">
                                                @service.Status
                                            </span>
                                        </td>
                                        <td>@service.LastChecked.ToString("g")</td>
                                        <td>
                                            <button class="btn btn-sm btn-info"
                                                    onclick="loadServiceDetails('@service.Name')"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#detailsModal@(service.Name.Replace(" ", ""))">
                                                <i class="fas fa-info-circle"></i> View
                                            </button>
                                        </td>
                                        <td>
                                            @if (service.Metrics.Any())
                                            {
                                                <button class="btn btn-sm btn-primary"
                                                        onclick="loadServiceMetrics('@service.Name')"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#metricsModal@(service.Name.Replace(" ", ""))">
                                                    <i class="fas fa-chart-line"></i> View
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Modals -->
            @foreach (var service in group.Services)
            {
                <!-- Details Modal -->
                <div class="modal fade" id="detailsModal@(service.Name.Replace(" ", ""))" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@service.Name Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <pre>@service.Details</pre>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Metrics Modal -->
                @if (service.Metrics.Any())
                {
                    <div class="modal fade" id="metricsModal@(service.Name.Replace(" ", ""))" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@service.Name Metrics</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Metric</th>
                                                    <th>Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var metric in service.Metrics)
                                                {
                                                    <tr>
                                                        <td>@metric.Key</td>
                                                        <td>@metric.Value</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>